#!/bin/bash
# Scale deployment to 3 replicas
echo "Scaling Django app to 3 replicas..."
kubectl scale --replicas=3 deployment/django-messaging-app

# Verify multiple pods are running
echo "Verifying pods..."
kubectl get pods

# Load test (requires port-forward or ingress)
echo "Running load test with wrk..."
wrk -t10 -c100 -d10s http://localhost:8000/

# Monitor resource usage
echo "Monitoring resource usage..."
kubectl top pods
